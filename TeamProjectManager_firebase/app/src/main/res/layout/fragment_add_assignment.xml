<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_assign_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/select_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="과제마감 기한을 선택하세요" />

    <EditText
        android:id="@+id/assignment_title_edit_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:hint="과제명을 입력하세요."
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="12sp"
        android:background="@drawable/edit_text_background"
        />

    <EditText
        android:id="@+id/assignment_detail_edit_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:hint="과제에 대한 설명을 입력하세요."
        android:textSize="12sp"
        android:background="@drawable/edit_text_background"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/add_assign_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_meeting_add" />

        <Button
            android:id="@+id/return_assign_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/button_return" />
    </LinearLayout>


</LinearLayout>